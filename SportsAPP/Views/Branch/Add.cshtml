
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<script src="~/AngularJS/AddBranch/jsAddBranchController.js"></script>
<script src="~/AngularJS/AjsFactory/AjsFactory.js"></script>

<div ng-controller="AddBranchController">
    <div class="row page-tilte align-items-center">
        <div class="col-sm-6 col-sm offset-3">
            <h1 class="weight-300 h3 title">Add Branch</h1>

        </div>
    </div>

    <div class="col-md-6 col-md offset-3">
        <div class="card mb-4">
            @*<div class="card-header">Add Branch</div>*@
            <div class="card-body">

                <form name="formx"  ng-submit="submitForm()">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Id</label>
                            <input type="text" class="form-control" id="txtBranch" ng-model="form.BranchId"  readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Name</label>
                            <input type="text" class="form-control" id="txtBranchName" ng-model="form.BranchName" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Email</label>
                            <input type="email" class="form-control" id="txtBranchEmail" ng-model="form.BranchEmail" placeholder="Email" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPhone4">Phone</label>
                            <input type="number" class="form-control" id="txtPhoneNumber" ng-model="form.BranchPhone" placeholder="Phone Number" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="txtAddress" ng-model="form.Address1" placeholder="1234 Main St" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" id="txtAddress2" ng-model="form.Address2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <label for="inputCity">City</label>
                            <select id="txtState" class="form-control" ng-model="form.City">
                                <option value="">Select City</option>
                                <option value="1">Mumbai</option>
                                <option value="2">Nagpur</option>
                                <option value="3">Other</option>
                              </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <select id="txtState" class="form-control" ng-model="form.State">
                                <option value="">Select State</option>
                                <option value="1">Maharastra</option>
                                <option value="2">Madhya Pradesh</option>
                                <option value="3">Gujrat</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputZip">Pin Code</label>
                            <input type="text" class="form-control" id="txtpin" ng-model="form.Zip" >
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger" >Submit</button>
                </form>

            </div>
        </div>

    </div>


</div>

